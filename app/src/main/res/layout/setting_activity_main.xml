<?xml version="1.0" encoding="utf-8"?>
<com.sc.lesa.mediashar.view.MyLineLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text ="설정"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/left_main"
            />
    </LinearLayout>


    <!--

        <Button
            android:id="@+id/turtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="가이드"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/guide_main"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="앱에 대한 작동방식을 알려주기 위한 기능"
            android:textStyle="bold"
            /> !-->

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/share_main"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="이 앱을 공유해보세요"
            android:textStyle="bold"
            />
    <Button
        android:id="@+id/comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="피드백"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/gmail_main"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="문제가 있거나 개선할 점을 개발자에게 알려주세요"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/review_main"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="앱이 마음에 드시나요? 리뷰를 남겨주세요"
        android:textStyle="bold"
        />
</com.sc.lesa.mediashar.view.MyLineLayout>